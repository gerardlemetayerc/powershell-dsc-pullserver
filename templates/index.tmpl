{{define "content"}}
<script src="/web/auth_check.js"></script>
<script src="/web/jwt_ajax.js"></script>
<section class="content">
    <div class="container-fluid">
        <br/>
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <p class="card-text" style="font-size:2em;"><i class="fas fa-server mr-2"></i><a id="total-agents" ></a></p>
                        <h5 class="card-title">Managed agents</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <p class="card-text" style="font-size:2em;"><i class="fas fa-cubes mr-2"></i><a id="total-modules" ></a></p>
                        <h5 class="card-title">Ressources Modules</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <p class="card-text" style="font-size:2em;"><i class="fas fa-project-diagram mr-2"></i><a id="total-configurations" ></a></p>
                        <h5 class="card-title">Configurations</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mb-2">
            <button id="preenroll-btn" class="btn btn-success" data-toggle="modal" data-target="#preenrollModal">
                <i class="fas fa-plus"></i> Ajouter un noeud
            </button>
        </div>
        <div class="card">
            <div class="card-body">
                <table style="width:100%" id="agents-table" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Last Communication</th>
                            <th>Thumbprint</th>
                            <th>Status</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-info text-white text-center p-2" style="font-size:1em;">
                    Configuration Status Overview
                </div>
                <div class="card-body" style="max-width:180px; margin:auto;">
                    <canvas id="agents-pie" width="120" height="120"></canvas>
                    <div class="d-flex justify-content-center align-items-center mt-3" id="agents-pie-legend">
                        <span id="legend-ok" class="legend-selectable active" style="cursor:pointer;display:inline-flex;align-items:center;margin-right:20px;"><span style="display:inline-block;width:22px;height:14px;background:#28a745;margin-right:6px;"></span>Compliant</span>
                        <span id="legend-err" class="legend-selectable active" style="cursor:pointer;display:inline-flex;align-items:center;"><span style="display:inline-block;width:22px;height:14px;background:#dc3545;margin-right:6px;"></span>Failed</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/web/reports.js"></script>
        <!-- Modal for pre-enrolling a node -->
        <div class="modal fade" id="preenrollModal" tabindex="-1" role="dialog" aria-labelledby="preenrollModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="preenrollModalLabel">Ajouter un noeud (pr√©-enregistrement)</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="preenroll-node-name">Nom du noeud</label>
                            <input type="text" class="form-control" id="preenroll-node-name" placeholder="Entrer le nom du noeud">
                        </div>
                        <div id="preenroll-error" class="text-danger"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        <button type="button" class="btn btn-primary" id="preenroll-submit">Ajouter</button>
                    </div>
                </div>
            </div>
        </div>
<script src="/web/preenroll.js"></script>
{{end}}
