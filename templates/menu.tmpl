            <a class="nav-link" data-toggle="dropdown" href="#" id="userDropdown">
                <i class="fas fa-user-circle"></i> <span id="userName">Utilisateur</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" href="#" id="logoutBtn"><i class="fas fa-sign-out-alt mr-2"></i>Déconnexion</a>
            </div>
        </li>
    </ul>
