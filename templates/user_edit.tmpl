{{define "content"}}
<section class="content">
    <div class="container-fluid">
        <h2>User modification</h2>
        <div class="card">
            <div class="card-body">
                <form id="editUserForm">
                    <input type="hidden" id="userId" name="id" />
                    <div class="form-group">
                        <label for="firstName">Firstname</label>
                        <input type="text" class="form-control" id="firstName" name="first_name" required />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Name</label>
                        <input type="text" class="form-control" id="lastName" name="last_name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Mail</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="form-group">
                        <label for="isActive">Enable</label>
                        <select class="form-control" id="isActive" name="is_active">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="role">Role</label>
                        <select class="form-control" id="role" name="role"></select>
                    </div>
                    <div class="form-group">
                        <label for="lastLogonDate">Last connexion</label>
                        <input type="text" class="form-control" id="lastLogonDate" name="last_logon_date" disabled />
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/web/user_password?id={{.ID}}" class="btn btn-warning">Change password</a>
                    <a href="/web/users" class="btn btn-secondary">Back</a>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="/web/user_edit.js"></script>
<script>
$(function() {
    // Remplit dynamiquement la liste des r√¥les
    $.get('/api/v1/user_roles', function(roles) {
        var $role = $('#role');
        $role.empty();
        $.each(roles, function(i, r) {
            $role.append($('<option>', { value: r, text: r }));
        });
    });
});
</script>
{{end}}
